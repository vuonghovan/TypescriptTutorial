{
    "compilerOptions": {
        "preserveConstEnums": true,
        "target": "ES2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        // "noUnusedParameters": true, // Waring a parameter don't use inside a function
        // "noUnusedLocals": true, // Waring a variable don't use inside a function
        "strictNullChecks": true, // Check a variable is nullable,
        "noUncheckedIndexedAccess": true, // Check a variable is undefined
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}